<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/md_theme_onPrimaryContainer</item>
        <item name="titleTextColor">@color/md_theme_onPrimary</item>
        <item name="subtitleTextColor">@color/md_theme_onPrimary</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="AddButton">
        <item name="backgroundTint">@color/md_theme_onPrimaryContainer</item>
        <item name="android:src">@drawable/ic_add</item>
        <item name="tint">@color/md_theme_onPrimary</item>
    </style>
    <style name="SaveButton">
        <item name="backgroundTint">@color/md_theme_onPrimaryContainer</item>
        <item name="icon">@drawable/ic_save</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">3dp</item>
        <item name="iconTintMode">@color/md_theme_onPrimary</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
    </style>
    <style name="DeleteButton">
        <item name="backgroundTint">@color/md_theme_onErrorContainer</item>
        <item name="icon">@drawable/ic_delete</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">3dp</item>
        <item name="iconTintMode">@color/md_theme_onPrimary</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
    </style>
</resources>